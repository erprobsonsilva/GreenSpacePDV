unit UPesquisa;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, FireDAC.Stan.Intf, FireDAC.Stan.Option,
  FireDAC.Stan.Param, FireDAC.Stan.Error, FireDAC.DatS, FireDAC.Phys.Intf,
  FireDAC.DApt.Intf, FireDAC.Stan.Async, FireDAC.DApt, Data.DB,
  FireDAC.Comp.DataSet, FireDAC.Comp.Client, UDM, Vcl.ExtCtrls, Vcl.Grids,
  Vcl.DBGrids, Vcl.StdCtrls;

type
  TFPesquisa = class(TForm)
    FDQPesquisa: TFDQuery;
    Panel1: TPanel;
    Panel2: TPanel;
    DbGridItem: TDBGrid;
    Panel3: TPanel;
    Button1: TButton;
    Button3: TButton;
    BtPesquisa: TButton;
    EdNome: TEdit;
    Label1: TLabel;
    Label2: TLabel;
    DataSource1: TDataSource;
    procedure BtPesquisaClick(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
    Procedure PesquisaProduto(aNome:String);
  end;

var
  FPesquisa: TFPesquisa;

implementation

{$R *.dfm}

procedure TFPesquisa.BtPesquisaClick(Sender: TObject);
begin
  FDQuery.Close;
  FDQuery.SQL.Clear;
  FDQuery.SQL.Add(' select * ');
  FDQuery.SQL.Add('   from produto p ');
  FDQuery.SQL.Add('  where ((upper(p.descricao) like upper(:descricao)) ');
  FDQuery.SQL.Add('  or (upper(p.nome) like upper(:nome))) ');
  FDQuery.ParamByName('descricao').AsString := EdNome.Text;
  FDQuery.ParamByName('nome').AsString := EdNome.Text;
  FDQuery.Open;
end;

procedure TFPesquisa.Button1Click(Sender: TObject);
begin
  ModalResult := DbGridItem.DataSource.DataSet.FieldByName('COD_PRODUTO').AsInteger;
end;

procedure TFPesquisa.Button3Click(Sender: TObject);
begin
  ModalResult := 0;
end;

procedure TFPesquisa.PesquisaProduto(aNome: String);
begin
  EdNome.Text := aNome;
end;

end.
